<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#706288">

    <TextView
        android:id="@+id/dienstNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SB 11-14" />

    <TextView
        android:id="@+id/dienstEndeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/dienstBeginTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dienstBeginTv"
        app:layout_constraintVertical_bias="0.0"
        tools:text="17:00" />

    <TextView
        android:id="@+id/dienstBeginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/dienstNameTv"
        app:layout_constraintEnd_toStartOf="@+id/dienstEndeTv"
        app:layout_constraintTop_toTopOf="@+id/dienstNameTv"
        tools:text="06:12" />

    <TextView
        android:id="@+id/dienstBeschreibungTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dienstNameTv"
        tools:text="Montag - Freitag gleich Vormittag Garagendienst + Nachmittag Garagendienst" />
</androidx.constraintlayout.widget.ConstraintLayout>