<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#706288">

    <TextView
        android:id="@+id/kursnummerTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        tools:text="2041/2045" />

    <TextView
        android:id="@+id/startZeitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/endZeitTv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="06:30" />

    <TextView
        android:id="@+id/endZeitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="07:25" />

    <TextView
        android:id="@+id/teilTv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kursnummerTv"
        tools:text="Leer von Graz nach Lieboch Bahnhof Ã¼ber Autobahn Abfahrt Lieboch" />

</androidx.constraintlayout.widget.ConstraintLayout>